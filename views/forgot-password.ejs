<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blogify - Forgot Password</title>
        <link rel="stylesheet" href="/styles/main.css">
</head>

<body class="bg-light">
    <%- include('./partials/nav') %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title text-center mb-4">Forgot Password</h2>
                            <% if (locals.error) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= error %>
                                </div>
                                <% } %>
                                    <% if (locals.message) { %>
                                        <div class="alert alert-success" role="alert">
                                            <%= message %>
                                        </div>
                                        <% } %>
                                            <form action="/api/auth/forgot-password" method="POST">
                                                <div class="mb-3">
                                                    <label for="email" class="form-label">Email address</label>
                                                    <input type="email" class="form-control" id="email" name="email"
                                                        required>
                                                </div>
                                                <button type="submit" class="btn btn-primary w-100">Reset
                                                    Password</button>
                                            </form>
                                            <p class="mt-3 text-center">Remember your password? <a href="/login"
                                                    class="auth-link">Login</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./partials/script') %>
</body>

</html>