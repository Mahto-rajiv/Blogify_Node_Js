<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blogify - Sign Up</title>
        <link rel="stylesheet" href="/styles/main.css">
</head>

<body class="bg-light">
    <%- include('./partials/nav') %>

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title text-center mb-4">Sign Up</h2>
                            <% if (locals.error) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= error %>
                                </div>
                                <% } %>
                                    <form action="/api/auth/register" method="POST">
                                        <div class="mb-3">
                                            <label for="fullName" class="form-label">Full Name</label>
                                            <input type="text" class="form-control" id="fullName" name="fullName"
                                                required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email address</label>
                                            <input type="email" class="form-control" id="email" name="email" required>
                                            <small class="form-text text-muted">Please enter a valid email address in
                                                lowercase (e.g., user@example.com).</small>
                                        </div>
                                        <div class="mb-3">
                                            <label for="password" class="form-label">Password</label>
                                            <input type="password" class="form-control" id="password" name="password"
                                                required>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                                    </form>
                                    <p class="mt-3 text-center">Already have an account? <a href="/login"
                                            class="auth-link">Log in</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./partials/script') %>
</body>

</html>